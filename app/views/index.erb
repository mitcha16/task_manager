<a href="/">Home</a>

<h1>All Tasks</h1>

<% @tasks.each do |task| %>
  <h3><%= task.id %>. <a href="/tasks/<%= task.id %>"><%= task.title %></a></h3>
  <a href="/tasks/<%= task.id %>/edit"><h4>edit</h4></a>
  <form action="/tasks/<%= task.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
<% end %>
